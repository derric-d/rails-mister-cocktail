<div class="container">
  <h1><%= @cocktail.name %></h1>
    <% @cocktail.doses.each do |dose| %>
    <%= -- dose.ingredient.name %>|
    <%= dose.description %>|
    <%= link_to "❌", dose_path(dose), method: :delete, data: { confirm: 'are you sure' }  %>
  <% end %>
  <br>

  <%= render 'dose_form' %>
  <%#= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail) %>
</div>
